upstream user-service {
    server user_service:8000;
    keepalive 32;
}

upstream bot-service {
    server bot_service:8080;
    keepalive 32;
}

server {
    listen 80;
    server_name yourdomain.com;

    proxy_connect_timeout 75s;
    proxy_send_timeout 600s;
    proxy_read_timeout 600s;
    send_timeout 600s;

    location /static/ {
        alias /user_service/staticfiles/;
        expires 1y;
        access_log off;
        add_header Cache-Control "public";
    }

    location /media/ {
        alias /user_service/media/;
        expires 1y;
        access_log off;
        add_header Cache-Control "public";
    }

    location /api/v1/webhook/ {
        proxy_pass http://bot-service;  # Используем правильный upstream
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Особые настройки для вебхуков
        client_max_body_size 20M;
        proxy_request_buffering off;
    }

    location / {
        proxy_pass http://user-service;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
}